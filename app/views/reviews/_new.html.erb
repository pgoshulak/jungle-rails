<%= form_for [@product, @review] do |f| %>

  <div class="form-group">
    <%= f.label :rating %>
    <%= f.select :rating, [5,4,3,2,1], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <%= f.submit %>

<% end %>